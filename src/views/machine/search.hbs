<div class="container">
    <div class="row py-3">
        {{!-- Search Bar --}}
        <form class="mx-auto" action="/machine/search" method="GET" style="max-width: 500px;"
            onsubmit="reloadAllProducts()">
            <div class="input-group my-4">
                <input type="text" class="form-control" placeholder="製番WBSを入力">
                <button class="btn btn-primary" type="button">検索</button>
            </div>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th class="py-3">製番WBS</th>
                    <th class="py-3">受注WBS</th>
                    <th class="py-3">機種</th>
                    <th class="py-3">納入先</th>
                    <th class="py-3 text-nowrap">プロセス</th>
                    <th class="py-3">工程選択</th>
                </tr>
            </thead>
            <tbody>
                {{#each machine}}
                    <tr class="table-active" style="vertical-align: middle;">
                        <td class="text-nowrap">{{machineID}}</td>
                        <td class="text-nowrap">{{lotID}}</td>
                        <td class="text-nowrap">{{machineType}}</td>
                        <td class="text-nowrap">{{customer}}</td>
                        <td class="text-danger">{{progress}}%</td>
                        <td><a class="btn btn-outline-warning text-nowrap" href="/process/machine/{{_id}}">工程選択</a></td>
                    </tr>
                {{/each}}
        </table>
    </div>

</div>