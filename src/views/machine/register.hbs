<section class="gradient-custom">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">機械登録</h3>
                        <form action="/machine/register" method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" name="machineID" class="form-control form-control-lg" />
                                        <label class="form-label">製番WBS</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" name="lotID" class="form-control form-control-lg" />
                                        <label class="form-label">受注WBS</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="form-outline datepicker w-100">
                                        <input type="text" name="customer"
                                            class="form-control form-control-lg" />
                                        <label class="form-label">納入先</label>
                                    </div>
                                </div>
                                {{!-- space on sm to md --}}
                                <div class="d-md-none py-1"></div>

                                <div class="col-md-6 mb-2">
                                    <label class="form-label select-label pe-3">機種:</label>
                                    <select class="select form-control-lg" name="machineType">
                                        <option value="LC-4NV212">LC-4NV212</option>
                                        <option value="LC-4NL212">LC-4NL212</option>
                                        <option value="LU-4NF212">LU-4NF212</option>
                                        <option value="LC-2QS212">LC-2QS212</option>
                                        <option value="LUC-2QS">LUC-2QS</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="登録" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>